{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext"],
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,

    /* Bundler mode */
    "types": ["node"],
    "module": "ES2015",
    "moduleResolution": "Bundler",

    /* Paths */
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"]
}
